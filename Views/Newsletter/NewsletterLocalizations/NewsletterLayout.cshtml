@model HRE.Models.Newsletters.NewsletterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
	<head>
		<style TYPE="text/css">
			table {
				width: 800px;
				border: 0px;
				margin: 0px;
				padding: 0px;
				cellpadding: 0;
				cellspacing: 0;
			}
			
			tr.header,
			tr.footer {
				background-color: #2483B3;
			}
			
			tbody, td, th {
				margin: 0px;
				padding: 0px;
				border: 0px 0px 0px 0px;
			}
			
			img {
				margin: 0px;
				padding: 0px;
				border: 0;
			}
			
			p {
				font-family: Calibri, 
				sans serif; 
				font-size: 14pt;
				text-align: left;
			}
			
			tr.header img {
				margin: 0px;
			}
			
			tr.item-header img, 
			tr.item-content p,
			tr.item-content img	{
				margin: 20px 20px 15px 20px;
			}
			
			.item-header td {
				border: 0px;
				text-align: right;
			}
			
			.item-header td.icon {
				text-align: left;
			}
			
			.item-content td {
				text-align: right;
				vertical-align: top;
			}
			
			.item-content td p {
				text-align: left;
			}
		</style>
	</head>
	<body>
		<table border="0" cellspacing="0" cellpadding="0">
            <thead>
				<tr class="header">
					<th colspan="4"><img src="http://www.hetrondjeeilanden.nl/Content/img/Nieuwsbrief/News_Header.png" alt="HRE Niewsbrief"/></th>
				</tr>
			</thead>
            <tbody>
				<tr>
					<td colspan="4"><p>Beste %ADDRESSEE%,</p></td>
				</tr>
				@foreach(var Item in Model.Items) {
                    <tr class="item-header">
					    <td class="icon"><img src="http://www.hetrondjeeilanden.nl/Content/img/Nieuwsbrief/@Item.IconImagePath" alt="@Item.Title" /></td>
					    <td colspan="3"><img src="http://www.hetrondjeeilanden.nl/Content/img/Nieuwsbrief/@Item.IconImagePath" alt="Happy new year!" /><!-- GEZOND 2013<br/>HAPPY NEW YEAR --></td>
				    </tr>
				    <tr class="item-content">
					    <td colspan="2"><p>@Item.Text</p></td>
					    <td colspan="2"><img src="http://www.hetrondjeeilanden.nl/Content/img/Nieuwsbrief/@Item.ImagePath" alt="@Item.Title" /></td>
				    </tr>
                }
                @if (Model.IncludeLoginLink) {
				    <tr class="item-content">
					    <td colspan="4"><a href="http://www.hetrondjeeilanden.nl/Account/%SOSLINK%"><img src="http://www.hetrondjeeilanden.nl/Content/img/sign_up.png" alt="Persoonlijke link" />Klik hier voor jouw persoonlijke toegang tot de HRE site</a></td>
				    </tr>
                }
				<tr class="footer">
					<td><a href="http://www.hetrondjeeilanden.nl" target="_other"><img src="http://www.hetrondjeeilanden.nl/Content/img/Nieuwsbrief/News_Web.png" alt="Online" title="Web"/></a></td>
					<td><a href="mailto:info@hetrondjeeilanden.nl" target="_other"><img src="http://www.hetrondjeeilanden.nl/Content/img/Nieuwsbrief/News_Email.png" alt="E-mail" title="E-mail"/></td>
					<td><a href="http://www.twitter.com/tRondjeEilanden" target="_other"><img src="http://www.hetrondjeeilanden.nl/Content/img/Nieuwsbrief/News_Twitter.png" alt="Twitter" title="Facebook"/></td>
					<td><a href="http://www.facebook.com/HetRondjeEilanden" target="_other"><img src="http://www.hetrondjeeilanden.nl/Content/img/Nieuwsbrief/News_Facebook.png" alt="Facebook" title="Facebook"></td>
				</tr>
                @if(ViewBag.IsEmail) {
					<tr>
                    <td colspan="4"><p><a href="http://www.hetrondjeeilanden.nl/NewsLetter/Unsubscribe/%UNSUB%" target="_blank">Afmelden</a></p></td>
                    </tr>
                }
			</tbody>
		</table>
	</body>
</html>