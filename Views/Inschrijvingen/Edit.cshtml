            function formatBank(state) {
                if (!state.id) {
                    return state.text; // optgroup
                }
                result = "<div class='sprite b" + state.id + "' /><div class='item-text'>" + state.text + "</div>";
                return result;
            }

            function formatPaymentType(state) {
                if (!state.id) {
