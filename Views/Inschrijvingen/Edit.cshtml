            if (Model.IsEditAllowed) {
                <div class="editor-label"></div>
                <div class="editor-field"></div>
                <div class="editor-label"></div>
                <div class="editor-field"></div>
                @* Include a number of hidden fields in the view to prevent these fields from getting emptied.
