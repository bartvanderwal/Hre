                <div class="editor-label">Bank (iDeal)</div>
		        <div class="editor-field">@Html.DropDownListFor(m => m.BankCode, Model.BankList, new { @style = "width: 250px", @class="select2", @id="bank-code", @placeholder="Selecteer je bank..." })</div>

