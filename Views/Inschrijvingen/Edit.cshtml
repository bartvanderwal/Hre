                                }
                                <tr><td>Eten</td><td><span id="food">@Model.KostenEten.AsAmount()</span></td></tr>
                            <tr class="total"><td>Totaal</td><td><span id="total">@Model.InschrijfGeld.Value.AsAmount()</span></td></tr>
